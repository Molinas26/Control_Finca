<div>
    <%- include("../encabezado"); %>
</div>

<center><h2><%= area.nombre_subarea%> <%= fecha %></h2></center>

<table id="datatableTest"  class="table table-striped table-bordered">
    <thead class="bg-primary text-white" style="text-align: center;">
        <tr>
            <th style="width: 10%;">NÂ°</th>
            <th>Empleado</th>
            <th>Area</th>
            <th style="width: 20%;">Hora de entrada</th>
            <th>Traslado</th>
        </tr>
    </thead>
    <tbody>
        <% empleados.forEach(datos=>{ %>
            <tr>
                <td><%= datos.fila%></td>
                <td><%= datos.empleado_nombre%></td>
                <td><%= area.nombre_subarea%></td>
                <td><%= datos.hora_entrada%></td>
                <td>
                    <% if(datos.hora_salida){ %>
                        <center style="color: red;">Termino labores</center>
                    <% }else{%>
                        <center><a href="/traslado/<%= datos.id_empleado%>" class="btn btn-success">Trasladar</a></center>
                    <% } %>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>

<a href="/control/<%= area.id_area%>" class="btn btn-secondary">Regresar</a>